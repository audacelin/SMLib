<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/header_bg"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="center"
     > 
<ImageView 
    android:id="@+id/header_iv_left"
    android:src="@drawable/bt_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:contentDescription="back"
    android:layout_centerVertical="true"
    android:visibility="invisible"
    />
<TextView 
    android:id="@+id/tv_left"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    />
<TextView 
    android:id="@+id/header_tv_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/title"
    android:gravity="center"
    android:textColor="@color/white"
    android:textSize="18sp"
    android:layout_centerInParent="true"
    />
<TextView 
    android:id="@+id/tv_right"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginRight="10dp"
    android:layout_centerInParent="true"
    android:text="方法"
    android:visibility="gone"
    />
<!-- <ImageView
    android:id="@+id/header_iv_right"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:layout_toRightOf="@+id/header_tv_title"
    android:layout_alignParentRight="true"
    android:contentDescription="back"
    /> -->
<ImageView
    android:id="@+id/header_iv_add"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:visibility="invisible"
    android:layout_alignParentRight="true"
    android:contentDescription="add"
    android:src="@drawable/tabbar_compose_icon_add"
    android:layout_marginRight="10dp"
    /> 
</RelativeLayout>
